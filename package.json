{
  "name": "newtab-companion-app",
  "version": "1.0.0",
  "description": "Companion app for Newtab by MatlikOfficial",
  "main": "electron/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "wait-on http://localhost:5173 && cross-env DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "vite build",
    "start": "cross-env NODE_ENV=production electron .",
    "lint": "echo \"Add your lint command here\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.matlikofficial.newtabcompanion",
    "productName": "Newtab Companion",
    "icon": "electron/assets/logo.png",
    "directories": {
      "output": "dist"
    },
    "files": [
      "renderer/**/*",
      "electron/**/*",
      "api/**/*",
      "services/**/*",
      "state/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "electron/assets/logo.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "electron/assets/logo.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "electron/assets/logo.png"
    }
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "auto-launch": "^5.0.6",
    "axios": "^1.13.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cuid": "^3.0.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "keytar": "^7.9.0",
    "lucide-react": "^0.555.0",
    "ps-list": "^9.0.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tailwind-merge": "^3.4.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.5",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "wait-on": "^9.0.3"
  }
}